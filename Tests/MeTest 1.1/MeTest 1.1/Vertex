#version 400

in layout(location=0) vec3 pos;
in layout(location=1) vec4 col;

out vec4 outColor;
out vec3 outPos;

uniform mat4x4 transformation;

void main() {
	vec4 transformed = transformation * vec4(pos.x,pos.y,pos.z,1);
	gl_Position = transformed;
	outPos = vec3(1/transformed.z,1/transformed.z,1/transformed.z);
	outColor = col;
}